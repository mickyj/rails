<%= form_for @author do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :nationality %>
  <%= f.text_field :nationality %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :books %>
  <%= f.text_field :books %>

  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <%= f.label :author_id %>

  <%= f.select :author_id, Author.all.map{|author| [author.name, author.id]}, :include_blank => true, :prompt => 'select artist' %>
  <%= f.submit%>

  <%end%>